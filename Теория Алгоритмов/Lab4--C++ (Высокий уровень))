
#include "pch.h"
#include <iostream>
#include <iostream>
#include <cstdio>
#include <cctype>

using namespace std;


int main() {

	setlocale(LC_ALL, "rus");

	char Massive[100];
	cout << "Введите пожалуйста ваш текст, который потом будет корректироваться.";
	cin >> Massive;
	cout << "Символ '!' будет заменен на 33";

	int count = 0; //счётчик элементов.
	int k = 0;
	int s = 0;
	int b = 0;
	int N;
	int counter = 0; // счетчик букв и цифр
	while (isalnum(Massive[counter]))
	{
		counter++;
		s = s + 1;
	}
	for (int i = 0; i < 100; i++)
	{
		if (Massive[i] == '!')
		{	
			k = k+1;
		}

	}
	N = s + k;
	k = 0; 
	char *NewMassive = new char[N];
	for (int i = 0; i < 100; i++)
	{
		if (Massive[i] == '!')
		{
			NewMassive[i] = '3';
			NewMassive[i + 1] = '3';
			k = k + 1;
		}
		else
		{
			NewMassive[i + k] = Massive[i];
		}

	}


	cout << endl << "Massive is:" << NewMassive;


	return 0;
}
